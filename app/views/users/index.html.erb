<h1 class="center">All Alpha Bloggers</h1>
<div class="row">
  <div class="col-sm-2 offset-sm-5 center">
    <div class="center">
      <%= will_paginate @users %>
    </div>
  </div>
</div>
<% @users.each do |user| %>
  <ul class="listing center" >
    <div class="row">
      <div class="card col-md-4 offset-md-4 text-dark bg-light">
        <li><%= link_to gravatar_for(user), user_path(user) %></li>
        <li class="article-title"><%= link_to user.username, user_path(user) %></li>
        <li>
          <small><%= pluralize(user.articles.count, "article") if user.articles %></small>
        </li>
        <% if logged_in? && current_user.admin? %>
          <li><%= link_to "Delete this user", user_path(user), data: { turbo_method: :delete,
                                                                       turbo_confirm: "Are you sure you want to delete the user and all his articles"},
                                                                       class: "btn btn-xs btn-danger" %>
          </li>
        <% end %>

      </div>
    </div>
  </ul>
<% end %>
<div class="row">
  <div class="col-sm-2 offset-sm-5 center">
    <div class="center">
      <%= will_paginate @users %>
    </div>
  </div>
</div>