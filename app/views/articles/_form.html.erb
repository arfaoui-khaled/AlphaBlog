<% if @article.errors.any? %>
  <h2>The following errors prevented the article from being created</h2>
  <ul>
    <% @article.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
  </ul>
<% end %>

<%= form_with model: @article do |f| %>
  <div class="form-floating">
    <%= f.text_field :title, class: "form-control", id: "floatingInput", placeholder: "Title of article", autofocus: true  %>
    <%= f.label :title %>
  </div> <br>
  <div class="form-floating">
    <%= f.text_area :description, class: "form-control", id: "floatingTextarea", placeholder: "Body of article" %>
    <%= f.label :description %>
  </div> <br>

  <%= f.submit class: "btn btn-primary btn-lg" %>


<% end %>
<div class="center">
<%= link_to "Back to articles listing", articles_path %>
</div>