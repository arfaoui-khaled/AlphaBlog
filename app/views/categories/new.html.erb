<h1 class="center">Create new category</h1>

<%= render "shared/errors", obj: @category %>

<%= form_with model: @category do |f| %>
  <div class="form-floating">
    <%= f.text_field :name, class: "form-control", id: "floatingInput", placeholder: "Enter category name", autofocus: true  %>
    <%= f.label :name %>
  </div> <br>

  <%= f.submit class: "btn btn-primary btn-lg" %>

<% end %>
<div class="center offset-xs-4 col-xs-4">
  <%= link_to "Cancel request and return to articles listing", articles_path %>
</div>

