<h1 class="center">Listing All Categories</h1>

<div class="row">
  <div class="col-sm-2 offset-sm-5 center">
    <div class="center">
      <%= will_paginate @categories %>
    </div>
  </div>
</div>

<% @categories.each do |category| %>

    <div class="row">
      <div class="card col-md-4 offset-md-4 text-dark bg-light center">
        <div class="card-body">
          <h5 class="card-title">
            <%= link_to "#{category.name}", category_path(category) %>
          </h5>
          <p class="card-text">
            <small><%= pluralize(category.articles.count, "article") %></small>
          </p>
        </div>
      </div>
    </div>

<% end %>

<div class="row" style="margin-top: 14px">
  <div class="col-sm-2 offset-sm-5 center">
    <div class="center">
      <%= will_paginate @categories %>
    </div>
  </div>
</div>